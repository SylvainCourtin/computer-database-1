<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
version="3.0">
 <display-name>computer_db</display-name>
  
     <listener>
		<listener-class>
             com.excilys.cdb.servlet.AppServletContextConfig
        </listener-class>
     </listener>
   
	 <servlet>
	     <servlet-name>ComputerServlet</servlet-name>
	     <servlet-class>com.excilys.cdb.servlet.ComputerServlet</servlet-class>
	 </servlet>
    
	 <servlet-mapping>
	     <servlet-name>ComputerServlet</servlet-name>
	     <url-pattern>/computer</url-pattern>
	 </servlet-mapping>
    
	 <welcome-file-list>
	   <welcome-file>index.jsp</welcome-file>
	 </welcome-file-list>
   
   <jsp-config>
	    <jsp-property-group>
	        <description>Toutes les pages</description>
	        <url-pattern>*.jsp</url-pattern>
	        <page-encoding>UTF-8</page-encoding>
	        <include-prelude>/template/prelude.jsp</include-prelude>
	        <include-prelude>/template/navigation.jsp</include-prelude>
	        <include-prelude>/template/alerts.jsp</include-prelude>
	        <include-coda>/template/footer.jsp</include-coda>
   	        <include-coda>/template/scripts.jsp</include-coda>
   	        <include-coda>/template/coda.jsp</include-coda>
	    </jsp-property-group>
	</jsp-config>

</web-app>