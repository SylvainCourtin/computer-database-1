	 <servlet>
	     <servlet-name>ComputerServlet</servlet-name>
	     <servlet-class>com.excilys.cdb.servlet.ComputerServlet</servlet-class>
	 </servlet>
   	 <servlet>
	     <servlet-name>CompanyServlet</servlet-name>
	     <servlet-class>com.excilys.cdb.servlet.CompanyServlet</servlet-class>
	 </servlet>
	 
	 <servlet-mapping>
	     <servlet-name>ComputerServlet</servlet-name>
	     <url-pattern>/computer</url-pattern>
	 </servlet-mapping>
    
   	 <servlet-mapping>
	     <servlet-name>CompanyServlet</servlet-name>
	     <url-pattern>/company</url-pattern>
	 </servlet-mapping>
	 
	 <welcome-file-list>
	   <welcome-file>computer</welcome-file>
	 </welcome-file-list>
   
   <session-config>
	<tracking-mode>COOKIE</tracking-mode>
    </session-config>
   <jsp-config>
	    <jsp-property-group>
	        <description>Toutes les pages</description>
	        <url-pattern>*.jsp</url-pattern>
	        <page-encoding>UTF-8</page-encoding>
	        <include-prelude>/template/prelude.jsp</include-prelude>
	        <include-prelude>/template/navigation.jsp</include-prelude>
	        <include-prelude>/template/alerts.jsp</include-prelude>
	        <include-coda>/template/footer.jsp</include-coda>
   	        <include-coda>/template/scripts.jsp</include-coda>
   	        <include-coda>/template/coda.jsp</include-coda>
	    </jsp-property-group>
	</jsp-config>

</web-app>